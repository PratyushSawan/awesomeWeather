<!DOCTYPE html>
<html lang="en">

<head>
    {{!-- meta data --}}
    {{>headerLinks}}
</head>

<body>
    {{!-- navbar --}}
    {{>navbar}}

    <!-- main-header  -->
    <div class="container-fluid main_temp_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="temp_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter city name here" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="todayDate">16 JAN</p>
                        <p id="day">tuesday</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{!-- Footer --}}
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>